{
  "name": "AppleMusic-Notification",
  "version": "1.7.0",
  "manifest_version": 2,
  "description": "再生中のAppleMusic楽曲情報表示&操作が出来ます。また、歌詞の表示も一部のみ出来ます。",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons" : {
    "16" : "icon.png"
  },
  "permissions" : [
    "contextMenus",
    "http://*/*",
    "https://*/*"
  ],
  "background" : {
    "scripts" : ["background.js"]
  },
  "content_scripts": [{
    "matches": ["https://beta.music.apple.com/*","http://*/*","https://*/*"],
    "js": ["content.js"]
    }]
  }