{
  "name": "__MSG_ext_name__",
  "version": "2.0.5",
  "manifest_version": 2,
  "description": "__MSG_ext_desc__",
  "default_locale": "en",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons" : {
    "128" : "icon.png"
  },
  "web_accessible_resources" : [
    "svg/twitter.svg",
    "svg/miniw.svg",
    "svg/settings.svg",
    "minip.html",
    "minip.js"
  ],
  "permissions" : [
    "contextMenus",
    "https://music.apple.com/*",
    "tabs"
  ],
  "background" : {
    "scripts" : ["background.js"]
  },
  "content_scripts": [{
    "matches": ["https://music.apple.com/*","http://*/*","https://*/*"],
    "js": ["content.js"]
    }]
  }